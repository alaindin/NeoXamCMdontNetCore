@model List<Risk>
@{
    ViewData["Title"] = "Index";
}

<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Liste des risques</h3>
            </div>


        </div>

        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-6 col-sm-6 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Boardered table <small>Bordered table subtitle</small></h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li>
                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                                <ul class="dropdown-menu" role="menu">
                                    <li>
                                        <a href="#">Settings 1</a>
                                    </li>
                                    <li>
                                        <a href="#">Settings 2</a>
                                    </li>
                                </ul>
                            </li>
                            <li>
                                <a class="close-link"><i class="fa fa-close"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Code risque</th>
                                    <th>Libellé</th>
                                    <th>Fait</th>
                                    <th>Action Préventive</th>
                                    <th>Action Consécutive</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var risk in Model)
                                {
                                <tr>
                                    <td>
                                        @risk.Code
                                    </td>
                                    <td>
                                        @risk.Description
                                    </td>
                                    <td>
                                        @risk.Fait
                                    </td>
                                    <td>
                                        @risk.ActionPreventive?.Label
                                    </td>
                                    <td>
                                        @risk.ActionConsecutive?.Label
                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
